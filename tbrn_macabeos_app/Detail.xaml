        <StackLayout>
            <Image Source="taber.png"
               FlexLayout.Order="-1"
               FlexLayout.AlignSelf="Center"
                           WidthRequest="180"
                           HeightRequest="180" Aspect="AspectFit" />
            <Label>

            </Label>
            <Label Text="Bienvenido Hermano:"
                FontSize="Large"
                HorizontalTextAlignment="Center" />
            <Label>

            </Label>
            <Label x:Name="Nombre_Completo"
                FontSize="24"
                HorizontalTextAlignment="Center" 
                FontAttributes="Bold"
                Grid.Row="0" Grid.Column="1"
                 />
            <Label>

            </Label>
            <Label Text="Ha Ingresado a MacabeosApp, en esta app manejara su Servicio con el Ministerio Macabeos."
                FontSize="Large"
                HorizontalTextAlignment="Center" />
        </StackLayout>
    </ContentPage.Content>
